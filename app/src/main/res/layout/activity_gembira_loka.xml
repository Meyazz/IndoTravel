<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".GembiraLoka">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<TextView
    android:id="@+id/image_gembira"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:text="Taman Gembira Loka"
    android:textSize="25dp"
    android:textColor="@color/white"
    android:fontFamily="@font/bebas"
    android:gravity="bottom"
    android:padding="10dp"
    android:background="@drawable/gembira"
    android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/open_location_button"
            android:layout_width="match_parent"
            android:background="@drawable/custom_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:onClick="openLocation"
            android:layout_below="@id/image_gembira"
            android:text="Open Location"/>


        <TextView
            android:id="@+id/artikel148"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/open_location_button"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="5sp"
            android:textSize="20dp"
            android:text="@string/artikel148" />

        <TextView
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/artikel148"
            android:lineSpacingExtra="5sp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:id="@+id/artk"
            android:textSize="20dp"
            android:text="@string/artikel149" />


        <TextView
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/artk"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:id="@+id/artikel"
            android:lineSpacingExtra="5sp"
            android:textSize="20dp"
            android:text="@string/artikel150" />
        <TextView
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/artikel"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:lineSpacingExtra="5sp"
            android:textSize="20dp"
            android:text="@string/artikel151" />

    </RelativeLayout>

</ScrollView>