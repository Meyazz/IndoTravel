<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UmbulPonggok"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/image_ponggok"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="bottom"
        android:fontFamily="@font/bebas"
        android:text="umbul ponggok"
        android:padding="10dp"
        android:background="@drawable/umbul_ponggok"
        android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/open_location_button"
                android:layout_width="match_parent"
                android:background="@drawable/custom_button"
                android:layout_below="@id/image_ponggok"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:onClick="openLocation"
                android:text="Open Location"/>

            <TextView
                android:id="@+id/artikel178"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/open_location_button"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="5sp"
                android:textSize="20dp"
                android:text="@string/artikel178" />

            <TextView
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/artikel178"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:id="@+id/flight"
                android:lineSpacingExtra="5sp"
                android:textSize="20dp"
                android:text="@string/artikel179" />
            <TextView
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/flight"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:id="@+id/tothesky"
                android:lineSpacingExtra="5sp"
                android:textSize="20dp"
                android:text="@string/artikel180" />
            <TextView
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tothesky"
                android:textColor="@color/black"
                android:lineSpacingExtra="5sp"
                android:textSize="20dp"
                android:text="@string/artikel181" />

    </RelativeLayout>

</ScrollView>