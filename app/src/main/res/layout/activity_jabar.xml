<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Jabar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alam_panenjoan"
                android:layout_below="@id/title"
                android:layout_toRightOf="@+id/alam"
                android:text="Alam Panenjoan"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/alam"
                android:layout_marginBottom="20dp"
                android:src="@drawable/alam"
                android:onClick="AlamPanenjoan"
                android:layout_below="@id/title"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/green-canyon"
                android:layout_below="@id/alam"
                android:text="Green Canyon"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/canyon"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/canyon"
                android:layout_marginBottom="20dp"
                android:src="@drawable/canyon"
                android:onClick="GreenCanyon"
                android:layout_below="@id/alam"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/stone"
                android:layout_below="@id/canyon"
                android:text="Stone Garden"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/garden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/garden"
                android:layout_marginBottom="20dp"
                android:src="@drawable/stone_garden"
                android:onClick="StoneGarden"
                android:layout_marginTop="20dp"
                android:layout_below="@id/canyon"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/ujung-genteng"
                android:layout_below="@id/garden"
                android:text="Pantai Ujung Genteng"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/ujung"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ujung"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ujung_genteng"
                android:onClick="UjungGenteng"
                android:layout_below="@id/garden"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/remis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/telaga"
                android:layout_below="@id/ujung"
                android:layout_marginBottom="12dp"
                android:text="Telaga Remis" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/telaga"
                android:layout_marginBottom="20dp"
                android:src="@drawable/remis"
                android:onClick="TelagaRemis"
                android:layout_below="@id/ujung"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/kawah"
                android:layout_below="@id/telaga"
                android:text="Kawah Putih"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/putih"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/putih"
                android:layout_marginBottom="20dp"
                android:src="@drawable/kawah_putih"
                android:onClick="KawahPutih"
                android:layout_below="@id/telaga"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/talaga"
                android:layout_below="@id/putih"
                android:text="Kawah Putih Talaga Bodas"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/bodas"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bodas"
                android:layout_marginBottom="20dp"
                android:src="@drawable/talaga_bodas"
                android:onClick="TalagaBodas"
                android:layout_below="@id/putih"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/kampung"
                android:layout_below="@id/bodas"
                android:text="Kampung Karuhun"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/karuhun"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/karuhun"
                android:layout_marginBottom="20dp"
                android:src="@drawable/karuhun"
                android:layout_below="@id/bodas"
                android:layout_marginTop="20dp"
                android:onClick="KampungKaruhun"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/sri"
                android:layout_below="@id/karuhun"
                android:text="Taman Air Mancur Sri Baduga"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="45dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/baduga"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/baduga"
                android:layout_marginBottom="20dp"
                android:src="@drawable/sri_baduga"
                android:onClick="SriBaduga"
                android:layout_below="@id/karuhun"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/curug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/cikaso"
                android:layout_below="@id/baduga"
                android:layout_marginBottom="12dp"
                android:text="Curug Cikaso" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cikaso"
                android:layout_marginBottom="20dp"
                android:src="@drawable/curug_cikaso"
                android:onClick="CurugCikaso"
                android:layout_marginTop="20dp"
                android:layout_below="@id/baduga"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>