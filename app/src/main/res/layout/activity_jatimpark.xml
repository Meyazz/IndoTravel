<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_jatimpark"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/image_jatim_park"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="jatim park"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/bebas"
        android:gravity="bottom"
        android:padding="10dp"
        android:background="@drawable/jatim_park2"
        android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/open_location_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_below="@id/image_jatim_park"
                android:background="@drawable/custom_button"
                android:onClick="openLocation"
                android:text="Jatim Park I"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:id="@+id/button"
                android:layout_below="@id/open_location_button"
                android:layout_marginBottom="24dp"
                android:onClick="openLocation2"
                android:text="Jatim Park II" />

            <Button
                android:layout_width="match_parent"
                android:background="@drawable/custom_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:id="@+id/button2"
                android:layout_below="@id/button"
                android:onClick="openLocation3"
                android:text="Jatim Park III" />


            <TextView
                android:autoLink="web"
                android:id="@+id/artikel55"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button2"
                android:lineSpacingExtra="5sp"
                android:textSize="20dp"
                android:text="@string/artikel55" />


            <TextView
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/artikel55"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="5sp"
                android:id="@+id/artikel"
                android:textSize="20dp"
                android:text="@string/artikel56"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/artikel"
                android:textColor="@color/black"
                android:lineSpacingExtra="5sp"
                android:textSize="20dp"
                android:text="@string/artikel57"/>

    </RelativeLayout>

</ScrollView>